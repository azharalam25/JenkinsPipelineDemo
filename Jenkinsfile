pipeline {
    agent any

    stages {
        stage('Hello Build Stage') {
            steps {
                echo 'Hello Code is Ready'
            }
        }
         stage('Deployument  Stage') {
            steps {
                echo 'Hello Deploy The Code'
            }
        }
         stage('Test Stage') {
            steps {
                echo 'Test the Code'
            }
        }
        stage('Release to Prod') {
            steps {
                echo 'Deploy to Prod'
            }
        }
    }
}
